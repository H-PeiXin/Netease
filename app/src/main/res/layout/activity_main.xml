<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rg_navigation"
        android:id="@+id/fl_fragment"/>
    <RadioGroup
        android:id="@+id/rg_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent" >

        <RadioButton
            android:drawableTop="@drawable/home_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_home"
            android:button="@null"
            android:gravity="center"
            android:layout_weight="1"
            android:text="首页"/>

        <RadioButton
            android:drawableTop="@drawable/special_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_special"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="专题"/>

        <RadioButton
            android:drawableTop="@drawable/classify_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_classify"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:text="分类"/>

        <RadioButton
            android:drawableTop="@drawable/shopping_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_shopping"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="购物"/>

        <RadioButton
            android:drawableTop="@drawable/me_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rb_me"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:text="我的"/>

    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>